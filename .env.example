# Productive Mining Platform - Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/productive_mining
POSTGRES_PASSWORD=productive_mining_password

# Application Configuration
NODE_ENV=production
PORT=5000

# QDT Memory Management
QDT_ENABLED=true
QDT_HEAP_THRESHOLD=85
QDT_GC_INTERVAL=3000
QDT_MONITORING_INTERVAL=5000

# Mining Configuration
MINING_DIFFICULTY_MIN=50
MINING_DIFFICULTY_MAX=180
MAX_ACTIVE_MINERS=25
CONTINUOUS_MINING_ENABLED=true

# Security Configuration
SECURITY_LEVEL=maximum
QUANTUM_RESISTANCE=enabled
ADAPTIVE_SECURITY=true
THREAT_DETECTION=enabled

# API Configuration
API_RATE_LIMIT=1000
API_TIMEOUT=30000
CORS_ORIGINS=*

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=21600
BACKUP_RETENTION_DAYS=30

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Feature Flags
REAL_MATHEMATICS_ENABLED=true
AI_ANALYTICS_ENABLED=true
INSTITUTIONAL_VALIDATION=true
QUANTUM_ENHANCEMENT=true